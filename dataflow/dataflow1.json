{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_Azure_CSV_Emp",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DS_Azure_CSV",
						"type": "DatasetReference"
					},
					"name": "sinkfkt"
				}
			],
			"transformations": [
				{
					"name": "filterflt"
				}
			],
			"scriptLines": [
				"source(output(",
				"          empno as integer,",
				"          ename as string,",
				"          job as string,",
				"          mgr as integer,",
				"          hiredate as string,",
				"          sal as integer,",
				"          comm as integer,",
				"          deptno as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     preferredIntegralType: 'integer') ~> source1",
				"source1 filter(deptno == 30) ~> filterflt",
				"filterflt sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['empnewflt.csv'],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> sinkfkt"
			]
		}
	}
}